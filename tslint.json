{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-xo/space"
  ],
  "rules": {
    "prefer-for-of": false,
    "no-console": false,
    "object-curly-spacing": false,
    "quotemark": [true, "single", "avoid-escape"],
    "promise-function-async": [
      true,
      "check-function-declaration",
      "check-function-expression",
      "check-method-declaration"
    ]
  }
}
